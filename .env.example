# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# Encryption Settings
# These should be the same values used by the original Django app
# ENCRYPTION_KEY should be a 32-byte key encoded in base64
# SALT should be a salt value encoded in base64
ENCRYPTION_KEY=your_32_byte_key_base64_here
SALT=your_salt_base64_here

# IntelX API Configuration
INTELX_API_KEY=your_intelx_api_key_here
INTELX_API_URL=https://2.intelx.io

# NextAuth Configuration (for authentication)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Optional: Redis for job queue
# REDIS_URL=redis://localhost:6379

# Optional: Backup schedule (cron format)
# BACKUP_SCHEDULE=0 2 * * *
